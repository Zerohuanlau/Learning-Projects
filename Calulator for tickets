print("Welcome to the rollercoaster!")
height = int(input("What is your height in cm? "))

if height >= 120:
    print("You can ride the rollercoaster")
    age = int(input("What is your age? "))
    if age <= 12:
        bill=5
        print("You can buy a child ticket, $5")
    elif age <= 18:
        bill=7
        print("You can buy a teenage ticket, $7")
    else:
        bill=12
        print("Nah you are too old, $12.")
    photo=input("Wanna get scammed for a photo? $3")
    if photo=="yes":
        print("lol get scammed")
        bill += 3
    else:photo=="no"
    print("oh okay no worries")
    print(f"Your final bill is {bill}")


else:
    print("Sorry you have to grow taller before you can ride.")
